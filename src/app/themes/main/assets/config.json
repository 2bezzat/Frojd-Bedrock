{
  "entry": {
    "main": [
      "./scripts/main.js",
      "./styles/main.scss"
    ]
  },
  "watch": [
    "templates/**/*.php",
    "src/**/*.php"
  ],
  "publicPath": "/app/themes/sage",
  "devUrl": "http://bedrock.dev:8080",
  "proxyUrl": "http://localhost:3000",
  "cacheBusting": "[name]_[hash:8]",
  "browserSyncOptions": {
    "snippetOptions": {
      "ignorePaths": "/wp/wp-admin/**"
    }
  },
  "browsers": [
    "last 2 versions",
    "android 4",
    "opera 12"
  ]
}
